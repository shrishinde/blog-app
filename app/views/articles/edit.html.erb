<h1>Edit article</h1>

<% if @article.errors.any? %>
  <h3>Error creating article</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <%end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title%>
    <%= f.text_field :title%><br/>
  </p>
  <p>
    <%= f.label :description%>
    <%= f.text_area :description%><br/>
  </p>
  <%= f.submit %>
<% end %>