<h1>Showing all articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <th><%= article.title%></th>
        <th><%= article.description%></th>
        <th><%= link_to 'Show', article_path(article) %></th>
        <th><%= link_to 'Edit', article_path(article) + "/edit" %></th>
        <th><%= link_to 'Delete', article_path(article), method: :delete %></th>
      </tr>
    <% end %>
  </tbody>
</table>