<h1>Create new article</h1>

<% if @article.errors.any? %>
  <h3>Error creating article</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <%end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title%><br/>
  <%= f.label :description%>
  <%= f.text_area :description%><br/>

  <%= f.submit %>
<% end %>